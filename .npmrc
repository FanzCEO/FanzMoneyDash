# FANZ MoneyDash NPM Security Configuration

# Always prefer exact versions for security
save-exact=true

# Audit packages on install
audit-level=moderate

# Fund messages can be disabled for cleaner output
fund=false

# Use npm ci in production for reproducible builds
engine-strict=true

# Prevent automatic package updates
save-prefix=""

# Security settings
prefer-online=false
fetch-timeout=60000
fetch-retries=3

# Use HTTPS for package registry
registry=https://registry.npmjs.org/

# Optional: Enable package-lock for security
package-lock=true