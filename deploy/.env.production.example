# FANZ MoneyDash Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Application URLs
APP_URL=https://money.fanz.network
API_BASE_URL=https://money.fanz.network/api
FRONTEND_URL=https://dash.fanz.network

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Configuration
MONGODB_URI=mongodb://fanz_user:CHANGE_THIS_PASSWORD@mongodb:27017/fanz_money_dash?authSource=admin
MONGODB_ROOT_USER=admin
MONGODB_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Redis Configuration
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# =============================================================================
# SECURITY & AUTH
# =============================================================================
# JWT Secret (use strong random string)
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_STRING_64_CHARS_MINIMUM

# Session Secret
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_RANDOM_STRING

# Encryption Keys
ENCRYPTION_KEY=CHANGE_THIS_32_BYTE_HEX_STRING_FOR_AES256

# =============================================================================
# AI & SERVICES
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048

# =============================================================================
# PAYMENT PROCESSORS
# =============================================================================
# Adult-friendly payment processors

# CCBill
CCBILL_CLIENT_ID=your_ccbill_client_id
CCBILL_CLIENT_SECRET=your_ccbill_client_secret
CCBILL_WEBHOOK_SECRET=your_ccbill_webhook_secret

# SegPay
SEGPAY_CLIENT_ID=your_segpay_client_id
SEGPAY_CLIENT_SECRET=your_segpay_client_secret
SEGPAY_WEBHOOK_SECRET=your_segpay_webhook_secret

# Verotel/CardBilling
VEROTEL_MERCHANT_ID=your_verotel_merchant_id
VEROTEL_SECRET=your_verotel_secret

# Epoch
EPOCH_PRODUCT_ID=your_epoch_product_id
EPOCH_SECRET=your_epoch_secret

# Crypto Payments (optional)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
WALLET_PRIVATE_KEY=your_wallet_private_key_for_receiving_payments

# =============================================================================
# CLOUD STORAGE & CDN
# =============================================================================
# Cloudflare R2 (S3-compatible)
CLOUDFLARE_R2_ACCESS_KEY=your_r2_access_key
CLOUDFLARE_R2_SECRET_KEY=your_r2_secret_key
CLOUDFLARE_R2_BUCKET=fanz-money-dash-prod
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# BunnyCDN
BUNNY_CDN_API_KEY=your_bunny_cdn_api_key
BUNNY_CDN_BASE_URL=https://fanz-money-dash.b-cdn.net
BUNNY_STORAGE_ZONE=fanz-money-dash

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
# SMTP Configuration (for notifications)
SMTP_HOST=smtp.domain.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@fanz.network
SMTP_PASS=your_smtp_password

# SendGrid (alternative)
SENDGRID_API_KEY=your_sendgrid_api_key

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log Level
LOG_LEVEL=info

# Sentry (Error Monitoring)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# SECURITY HEADERS & CORS
# =============================================================================
# Allowed Origins for CORS
CORS_ORIGINS=https://dash.fanz.network,https://boyfanz.com,https://girlfanz.com,https://pupfanz.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# ADULT INDUSTRY SPECIFIC
# =============================================================================
# Age Verification Service
AGE_VERIFICATION_PROVIDER=verifymy
VERIFYMY_API_KEY=your_verifymy_api_key

# Content Scanning
NSFW_DETECTION_API_KEY=your_nsfw_detection_api_key

# =============================================================================
# FANZ ECOSYSTEM INTEGRATION
# =============================================================================
# FanzDash Integration
FANZDASH_API_URL=https://dash.fanz.network/api
FANZDASH_API_KEY=your_fanzdash_api_key

# SSO Configuration
SSO_PROVIDER_URL=https://sso.fanz.network
SSO_CLIENT_ID=fanz-money-dash
SSO_CLIENT_SECRET=your_sso_client_secret

# Webhook URLs for other FANZ platforms
WEBHOOK_BOYFANZ=https://api.boyfanz.com/webhooks/money-dash
WEBHOOK_GIRLFANZ=https://api.girlfanz.com/webhooks/money-dash
WEBHOOK_PUPFANZ=https://api.pupfanz.com/webhooks/money-dash

# =============================================================================
# DEVELOPMENT & DEBUG (set to false/off in production)
# =============================================================================
DEBUG=false
ENABLE_API_DOCS=false
ENABLE_PLAYGROUND=false

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Database backup settings
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *
DB_BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System maintenance in progress. Please try again later.