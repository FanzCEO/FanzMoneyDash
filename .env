# FanzMoneyDash Configuration Template
# Copy this file to .env and update the values for your environment

# ===============================
# Application Configuration
# ===============================
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# ===============================
# Security Configuration
# ===============================
# JWT Configuration (REQUIRED)
JWT_SECRET=dev-jwt-secret-key-for-local-development-minimum-32-chars-required
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com,https://fanzdash.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Security Features
CSRF_ENABLED=false
HELMET_ENABLED=true

# ===============================
# Database Configuration
# ===============================
# PostgreSQL Database (REQUIRED)
DATABASE_URL=postgresql://username:password@localhost:5432/fanzmoney
# OR use individual settings:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fanzmoney
# DB_USER=postgres
# DB_PASSWORD=your_password

DATABASE_SSL=false
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000
DATABASE_QUERY_TIMEOUT=60000
DATABASE_IDLE_TIMEOUT=600
DATABASE_MAX_LIFETIME=3600
DEBUG_SQL=false

# ===============================
# Redis Configuration
# ===============================
# Redis for caching and sessions (REQUIRED)
REDIS_URL=redis://localhost:6379
# OR use individual settings:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

REDIS_PREFIX=fanzmoney:
REDIS_TTL=3600
REDIS_KEEPALIVE=30000
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_RETRY_DELAY=100
REDIS_MAX_RETRIES=3
REDIS_TLS=false

# ===============================
# External Services
# ===============================
# FanzDash Integration (REQUIRED)
FANZDASH_BASE_URL=http://localhost:3000
FANZDASH_API_KEY=dev_fanzdash_api_key_placeholder
FANZDASH_TIMEOUT=30000

# ===============================
# Payment Processors (REQUIRED)
# ===============================
# RocketGate
ROCKETGATE_MERCHANT_ID=dev_rocketgate_merchant_id
ROCKETGATE_MERCHANT_PASSWORD=dev_rocketgate_merchant_password
ROCKETGATE_API_URL=https://gateway.rocketgate.com
ROCKETGATE_TEST_MODE=true

# SegPay
SEGPAY_PACKAGE_ID=dev_segpay_package_id
SEGPAY_MERCHANT_ID=dev_segpay_merchant_id
SEGPAY_API_KEY=dev_segpay_api_key
SEGPAY_API_URL=https://api.segpay.com
SEGPAY_TEST_MODE=true

# CCBill
CCBILL_ACCOUNT_NUMBER=dev_placeholder_number
CCBILL_SUBACCOUNT_NUMBER=dev_placeholder_number
CCBILL_FLEXFORMS_ID=dev_placeholder_id
CCBILL_SALT_KEY=dev_placeholder_key
CCBILL_API_URL=https://api.ccbill.com
CCBILL_TEST_MODE=true

# Epoch
EPOCH_MEMBER_ID=dev_placeholder_id
EPOCH_CLASS_ID=dev_placeholder_id
EPOCH_KEY_ID=dev_placeholder_id
EPOCH_KEY=dev_placeholder_key
EPOCH_API_URL=https://epoch.com
EPOCH_TEST_MODE=true

# BitPay
BITPAY_API_KEY=dev_placeholder_key
BITPAY_API_SECRET=dev_placeholder_secret
BITPAY_API_URL=https://bitpay.com/api
BITPAY_TEST_MODE=true

# Coinbase Commerce
COINBASE_API_KEY=dev_placeholder_key
COINBASE_WEBHOOK_SECRET=dev_placeholder_secret
COINBASE_API_URL=https://api.commerce.coinbase.com
COINBASE_TEST_MODE=true

# ===============================
# Payout Providers (REQUIRED)
# ===============================
# Paxum
PAXUM_API_KEY=dev_placeholder_key
PAXUM_API_SECRET=dev_placeholder_secret
PAXUM_API_URL=https://www.paxum.com/payment/api
PAXUM_TEST_MODE=true

# Wise (formerly TransferWise)
WISE_API_KEY=dev_placeholder_key
WISE_PROFILE_ID=dev_placeholder_id
WISE_API_URL=https://api.wise.com
WISE_TEST_MODE=true

# Payoneer
PAYONEER_USERNAME=dev_placeholder_username
PAYONEER_PASSWORD=dev_placeholder_password
PAYONEER_PARTNER_ID=dev_placeholder_id
PAYONEER_API_URL=https://api.sandbox.payoneer.com
PAYONEER_TEST_MODE=true

# Crypto Payouts
CRYPTO_PAYOUTS_ENABLED=false
CRYPTO_BTC_ADDRESS=your_btc_address
CRYPTO_ETH_ADDRESS=your_eth_address
CRYPTO_USDT_ADDRESS=your_usdt_address
CRYPTO_TEST_MODE=true

# ===============================
# Feature Flags
# ===============================
FEATURE_AUTO_REFUNDS=true
FEATURE_MANUAL_REVIEW=true
FEATURE_CRYPTO_PAYMENTS=false
FEATURE_MULTI_CURRENCY=false
FEATURE_FRAUD_DETECTION=true
FEATURE_REALTIME_NOTIFICATIONS=true
FEATURE_AUDIT_LOGGING=true
FEATURE_PERFORMANCE_MONITORING=true

# ===============================
# Fraud Detection
# ===============================
FRAUD_DETECTION_ENABLED=true
FRAUD_THRESHOLD_LOW=0.3
FRAUD_THRESHOLD_MEDIUM=0.6
FRAUD_THRESHOLD_HIGH=0.8
FRAUD_AUTO_REJECT_THRESHOLD=0.9
FRAUD_AUTO_APPROVE_THRESHOLD=0.2

# Velocity Limits
FRAUD_VELOCITY_TRANSACTIONS=10
FRAUD_VELOCITY_AMOUNT=1000
FRAUD_VELOCITY_WINDOW=3600

# Geo Blocking
FRAUD_GEO_BLOCKING_ENABLED=false
FRAUD_BLOCKED_COUNTRIES=
FRAUD_ALLOWED_COUNTRIES=

# IP Filtering
FRAUD_IP_FILTERING_ENABLED=false
FRAUD_IP_BLACKLIST=
FRAUD_IP_WHITELIST=

# ===============================
# Notification Services
# ===============================
# Email Notifications
EMAIL_ENABLED=false
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=dev_placeholder_key
EMAIL_FROM=noreply@fanzmoney.com
EMAIL_FROM_NAME=FanzMoneyDash

# SMS Notifications
SMS_ENABLED=false
SMS_PROVIDER=twilio
SMS_API_KEY=dev_placeholder_key
SMS_API_SECRET=dev_placeholder_secret
SMS_FROM_NUMBER=dev_placeholder_number

# Webhook Notifications
WEBHOOK_ENABLED=true
WEBHOOK_ENDPOINTS=https://api.fanzdash.com/webhooks/money
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000

# ===============================
# Logging Configuration
# ===============================
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=false
LOG_FILENAME=fanzmoney.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Elasticsearch Logging (Optional)
LOG_ELASTICSEARCH=false
# ELASTICSEARCH_NODE=http://localhost:9200
# ELASTICSEARCH_INDEX=fanzmoney-logs

# ===============================
# Monitoring & Health Checks
# ===============================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Metrics
METRICS_ENABLED=true

# Prometheus (Optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Distributed Tracing (Optional)
TRACING_ENABLED=false
# JAEGER_ENDPOINT=http://localhost:14268/api/traces