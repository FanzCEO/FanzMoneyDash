# FANZ Money Dash - Environment Configuration
# Copy to .env and fill in your specific values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost
CLIENT_URL=http://localhost:3000

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/fanz_money_dash
DB_NAME=fanz_money_dash

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Blockchain Configuration
BLOCKCHAIN_NETWORK=ethereum
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
PRIVATE_KEY=your_private_key_for_blockchain_operations
CONTRACT_ADDRESS=your_deployed_smart_contract_address
GAS_LIMIT=200000
GAS_PRICE=20000000000

# FANZ-Compliant Payment Gateways (NO Stripe/PayPal per rules)
# Adult-friendly processors only
CCBILL_CLIENT_ACCOUNT=your_ccbill_account
CCBILL_CLIENT_SUBACCOUNT=your_ccbill_subaccount
CCBILL_FORM_NAME=your_ccbill_form_name

SEGPAY_PACKAGE_ID=your_segpay_package_id
SEGPAY_MERCHANT_ID=your_segpay_merchant_id

EPOCH_MERCHANT_ID=your_epoch_merchant_id
EPOCH_PACKAGE_ID=your_epoch_package_id

VENDO_MERCHANT_ID=your_vendo_merchant_id
VENDO_SITE_ID=your_vendo_site_id

# Cryptocurrency Payment Gateways
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_API_SECRET=your_coinbase_api_secret
BITPAY_API_TOKEN=your_bitpay_api_token
NOWPAYMENTS_API_KEY=your_nowpayments_api_key

# Payout Methods (FANZ-compliant)
PAXUM_API_KEY=your_paxum_api_key
PAXUM_API_SECRET=your_paxum_api_secret
EPAYSERVICE_API_KEY=your_epayservice_api_key
COSMO_PAYMENT_API_KEY=your_cosmo_payment_api_key

# AI/ML Configuration
OPENAI_API_KEY=sk-your_openai_api_key
TENSORFLOW_MODEL_PATH=/models
AI_PREDICTION_BATCH_SIZE=100
ML_MODEL_RETRAIN_INTERVAL=86400000

# Compliance & Tax Configuration
TAX_API_ENDPOINT=https://api.taxservice.com
TAX_API_KEY=your_tax_api_key
COMPLIANCE_WEBHOOK_URL=https://yourapp.com/webhooks/compliance

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@fanz.network

# Cloud Storage (Bunny CDN as per FANZ rules)
BUNNY_STORAGE_ZONE=your_bunny_storage_zone
BUNNY_API_KEY=your_bunny_api_key
BUNNY_CDN_URL=https://your_zone.b-cdn.net

# Alternative: Adult-friendly hosting (DigitalOcean, Vultr, etc.)
DO_SPACES_KEY=your_digitalocean_spaces_key
DO_SPACES_SECRET=your_digitalocean_spaces_secret
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=your_bucket_name

# Monitoring & Analytics
SENTRY_DSN=https://your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Feature Flags
FEATURE_AI_ANALYTICS=true
FEATURE_BLOCKCHAIN=true
FEATURE_PWA=true
FEATURE_COMPLIANCE=true
FEATURE_REAL_TIME_STREAMING=true

# Development & Testing
DEBUG_MODE=false
LOG_LEVEL=info
MOCK_PAYMENTS=false
MOCK_BLOCKCHAIN=false
TEST_DATABASE_URI=mongodb://localhost:27017/fanz_test

# Production Security Headers
ALLOWED_ORIGINS=https://fanz.network,https://app.fanz.network,https://boyfanz.com,https://girlfanz.com,https://pupfanz.com
TRUST_PROXY=true
SECURE_COOKIES=false
HTTPS_ONLY=false

# Performance Configuration
COMPRESSION_LEVEL=6
CACHE_TTL=3600
MAX_UPLOAD_SIZE=10485760
WORKER_PROCESSES=auto

# FanzDash Integration (as per FANZ rules)
FANZDASH_API_URL=https://dash.fanz.network/api
FANZDASH_API_KEY=your_fanzdash_api_key
FANZDASH_WEBHOOK_SECRET=your_fanzdash_webhook_secret

# Host Merchant Services (HMS) Integration
HMS_API_URL=https://api.hostmerchantservices.com
HMS_API_KEY=your_hms_api_key
HMS_MERCHANT_ID=your_hms_merchant_id