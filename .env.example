# ===========================================
# FANZMONEYDASH ENVIRONMENT CONFIGURATION
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://fanzmoney:password@localhost:5432/fanzmoney_dev
DATABASE_POOL_SIZE=20
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=fanzmoney:
REDIS_TTL=3600

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this
JWT_EXPIRES_IN=24h
API_KEY_SECRET=your-api-key-secret-for-webhooks-change-this
ENCRYPTION_KEY=your-32-byte-encryption-key-here-change-this-to-32-chars
HMAC_SECRET=your-hmac-secret-for-data-integrity-change-this

# CORS Origins (comma-separated)
CORS_ORIGINS=https://fanzdash.com,https://admin.fanz.network,https://creator.boyfanz.com,https://creator.girlfanz.com,https://creator.pupfanz.com,https://starz.boyfanz.com,https://starz.girlfanz.com,https://starz.pupfanz.com,https://dashboard.taboofanz.com,https://dashboard.transfanz.com,http://localhost:3000

# ===========================================
# PAYMENT PROCESSORS
# ===========================================

# RocketGate
ROCKETGATE_API_KEY=your-rocketgate-api-key
ROCKETGATE_API_SECRET=your-rocketgate-api-secret
ROCKETGATE_MERCHANT_ID=your-rocketgate-merchant-id
ROCKETGATE_WEBHOOK_SECRET=your-rocketgate-webhook-secret

# SegPay
SEGPAY_API_KEY=your-segpay-api-key
SEGPAY_API_SECRET=your-segpay-api-secret
SEGPAY_MERCHANT_ID=your-segpay-merchant-id
SEGPAY_WEBHOOK_SECRET=your-segpay-webhook-secret

# CCBill
CCBILL_API_KEY=your-ccbill-api-key
CCBILL_API_SECRET=your-ccbill-api-secret
CCBILL_CLIENT_ACCOUNT=your-ccbill-client-account
CCBILL_SUB_ACCOUNT=your-ccbill-sub-account
CCBILL_WEBHOOK_SECRET=your-ccbill-webhook-secret

# Epoch
EPOCH_API_KEY=your-epoch-api-key
EPOCH_API_SECRET=your-epoch-api-secret
EPOCH_MERCHANT_ID=your-epoch-merchant-id
EPOCH_WEBHOOK_SECRET=your-epoch-webhook-secret

# Vendo
VENDO_API_KEY=your-vendo-api-key
VENDO_API_SECRET=your-vendo-api-secret
VENDO_MERCHANT_ID=your-vendo-merchant-id
VENDO_WEBHOOK_SECRET=your-vendo-webhook-secret

# Verotel
VEROTEL_API_KEY=your-verotel-api-key
VEROTEL_API_SECRET=your-verotel-api-secret
VEROTEL_MERCHANT_ID=your-verotel-merchant-id
VEROTEL_WEBHOOK_SECRET=your-verotel-webhook-secret

# ===========================================
# CRYPTO PROCESSORS
# ===========================================

# BitPay
BITPAY_API_TOKEN=your-bitpay-api-token
BITPAY_PRIVATE_KEY_PATH=./keys/bitpay-private.key
BITPAY_WEBHOOK_SECRET=your-bitpay-webhook-secret

# Coinbase Commerce
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_WEBHOOK_SECRET=your-coinbase-webhook-secret

# NOWPayments
NOWPAYMENTS_API_KEY=your-nowpayments-api-key
NOWPAYMENTS_WEBHOOK_SECRET=your-nowpayments-webhook-secret

# CoinGate
COINGATE_API_TOKEN=your-coingate-api-token
COINGATE_WEBHOOK_SECRET=your-coingate-webhook-secret

# ===========================================
# PAYOUT PROVIDERS
# ===========================================

# Paxum (Primary adult industry payout provider)
PAXUM_API_KEY=your-paxum-api-key
PAXUM_API_SECRET=your-paxum-api-secret
PAXUM_MERCHANT_ID=your-paxum-merchant-id

# Wise (formerly TransferWise)
WISE_API_TOKEN=your-wise-api-token
WISE_PROFILE_ID=your-wise-profile-id
WISE_WEBHOOK_SECRET=your-wise-webhook-secret

# Payoneer
PAYONEER_API_KEY=your-payoneer-api-key
PAYONEER_API_SECRET=your-payoneer-api-secret
PAYONEER_PROGRAM_ID=your-payoneer-program-id

# ===========================================
# MONITORING & LOGGING
# ===========================================

# Sentry (Error Monitoring)
SENTRY_DSN=your-sentry-dsn-url

# DataDog (APM & Metrics)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# Winston Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/fanzmoney.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ===========================================
# FEATURE FLAGS & CONFIGURATION
# ===========================================

# FanzTrust Configuration
FANZTRUST_AUTO_APPROVE_THRESHOLD=80
FANZTRUST_MANUAL_REVIEW_THRESHOLD=40
FANZTRUST_AUTO_REJECT_THRESHOLD=40
FANZTRUST_MODEL_VERSION=v2.1.0

# Transaction Limits
MAX_TRANSACTION_AMOUNT=50000
MIN_TRANSACTION_AMOUNT=0.50
MAX_REFUND_WINDOW_HOURS=168
AUTO_REFUND_WINDOW_HOURS=1

# Rate Limiting
ADMIN_RATE_LIMIT=100
PAYMENT_RATE_LIMIT=10
GENERAL_RATE_LIMIT=1000

# Payout Minimums
PAYOUT_MIN_PAXUM=20.00
PAYOUT_MIN_WISE=10.00
PAYOUT_MIN_CRYPTO=25.00
PAYOUT_MIN_ACH=50.00
PAYOUT_MIN_WIRE=100.00

# ===========================================
# DEVELOPMENT/TESTING
# ===========================================

# Test Mode (set to true for development)
TEST_MODE=true

# Mock Payment Processors (for development)
MOCK_PROCESSORS=true

# Database Migration
AUTO_MIGRATE=false

# Seed Data
CREATE_SAMPLE_DATA=false

# Debug Flags
DEBUG_SQL=false
DEBUG_REDIS=false
DEBUG_WEBHOOKS=true